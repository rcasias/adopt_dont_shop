<%= form_with url: '/applications', method: :post, local: true do |form| %>
  <%= form.label :name%><br/>
  <%= form.text_field :name, :required => true %><br/>
  <%= form.label :address %><br/>
  <%= form.text_field :address, :required => true %><br/>
  <%= form.label :city %><br/>
  <%= form.text_field :city, :required => true %><br/>
  <%= form.label :state %><br/>
  <%= form.text_field :state, :required => true %><br/>
  <%= form.label :zip %><br/>
  <%= form.text_field :zip, :required => true %><br/>
  <%= form.submit "Submit" %>
<% end %>
