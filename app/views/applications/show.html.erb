<h1><%= @application.name %></h1>
<h3>Street Address: <%= @application.address %></h3>
<h3>Description: <%= @application.description %></h3>

<% if @application.description.nil? %>
  <%@application.status = "In Progress" %>
  <h3>Status: <%= @application.status %></h3>
<% else !@application.description.nil? %>
  <%@application.status = "Pending" %>
  <h3>Status: <%= @application.status %></h3>
  <h4> Your pets: </h4>
    <% @pet.each do |pet| %>
      <p><%= pet.name %></p>
    <% end %>
<% end %>

<% if @application.status != "Pending" %>
  <div id="pet_requests">
    <h4> Your pets: </h4>
    <% if @pet != nil %>
      <% @pet.each do |pet| %>
        <p><%= pet.name %></p>
      <% end %>

        <section>
          <%= form_with(url: "/applications/#{@application.id}", method: :post) do |form| %>
            <%= form.label "Why I would make a great owner:" %>
            <%= form.text_field :description %>
            <%= form.submit value: "Submit Adoption Form" %>
          <% end %>
        </section>


    <% end %>
  </div>



  <%= form_with(url: "/applications/#{@application.id}", method: :get) do |form| %>
    <%= form.label "Find Pet for this Application (pet name):" %>
    <%= form.text_field :pet_of_interst_name %>
    <%= form.submit value: "Find" %>
  <% end %>


    <% @pets.each do |pet| %>
      <h3><%= pet.name %></h3>
      <p>Age: <%= pet.age %></p>
      <p>Breed: <%= pet.breed %></p>
      <p>Adoptable? <%= pet.adoptable %></p>
      <%= link_to("Adopt #{pet.name}", "/applications/#{@application.id}/#{pet.id}", method: :get) %>
    <% end %>
<% end %>
